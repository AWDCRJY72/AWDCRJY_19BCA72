import java.io.*;
class Pattern
{
public static void main(String args[])
{
int n=5;
for(int i=1;i<=5;i++)
{
for(int j=1;j<=i;j++)
{
System.out.print("* ");
}
System.out.println( );
}
for(int i=1;i<=n;i++)
{
for(int j=5;j>=i;j--)
{
System.out.print("* ");
}
System.out.println( );
}
}
}

output:

C:\Users\mynew>cd\

C:\>cd java

C:\java>javac Pattern.java

C:\java>java Pattern
*
* *
* * *
* * * *
* * * * *
* * * * *
* * * *
* * *
* *
*
